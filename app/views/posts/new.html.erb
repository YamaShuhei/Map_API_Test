<div>
  <%= form_with(model: @post, local: true) do |f| %>
  
    <div class="form-group">
      <%= f.label :title, "名前" %>
      <%= f.text_field :title, class: 'form-control' %>
      <br>
      
     <%= f.label :address, '場所' %>
     <%= f.text_field :address, class: 'form-control' %>
   </div>
  
   <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
  
  
  <% end %>
  
  
  
</div>